rules_version = '2';

// Firebase Storage Security Rules for inque Widget Studio
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to widget files
    match /uploads/{uploadId}/{fileName} {
      allow read: if true; // Public read access for widget files
      allow write: if request.auth != null; // Only authenticated users can upload
    }
    
    // Legacy widget storage paths (if any exist)
    match /widgets/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can write
    }
    
    // User profile images and other user-specific files
    match /users/{userId}/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can write
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
